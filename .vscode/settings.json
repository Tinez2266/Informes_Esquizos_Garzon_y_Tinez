{
  "cSpell.language": "es,en",

  // üì¶ Compilaci√≥n autom√°tica al guardar
  "latex-workshop.latex.autoBuild.run": "onSave",

  // ‚öôÔ∏è Herramientas de compilaci√≥n y limpieza
  "latex-workshop.latex.tools": [
    {
      "name": "pdflatex",
      "command": "pdflatex",
      "args": [
        "-interaction=nonstopmode",
        "-synctex=1",
        "%DOC%"
      ]
    },
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-pdf",
        "-interaction=nonstopmode",
        "-synctex=1",
        "-auxdir=.aux",
        "-f",
        "%DOC%"
      ]
    },
    {
      "name": "clean",
      "command": "latexmk",
      "args": ["-c"]
    }
  ],

  // üß∞ Recetas: compilar y limpiar
  "latex-workshop.latex.recipes": [
    {
      "name": "pdflatex",
      "tools": ["pdflatex"]
    },
    {
      "name": "pdflatex + clean",
      "tools": ["pdflatex", "clean"]
    },
    {
      "name": "latexmk",
      "tools": ["latexmk"]
    }
  ],

  "latex-workshop.latex.recipe.default": "latexmk",

  // üóëÔ∏è Limpieza habilitada y archivos a eliminar
  "latex-workshop.latex.clean.enabled": true,
  "latex-workshop.latex.clean.fileTypes": [
    "*.aux", "*.bbl", "*.blg", "*.idx", "*.ind", "*.lof", "*.lot",
    "*.out", "*.toc", "*.acn", "*.acr", "*.alg", "*.glg", "*.glo",
    "*.gls", "*.ist", "*.fls", "*.log", "*.fdb_latexmk"
  ],

  // üìÑ Detecci√≥n autom√°tica del archivo ra√≠z (√∫til si usas \input o subfiles)
  "latex-workshop.latex.rootFile.useSubFile": true,
  "latex-workshop.latex.rootFile.doNotPrompt": true,

  // üîÑ Sincronizaci√≥n PDF <-> c√≥digo
  "latex-workshop.synctex.afterBuild.enabled": true,
  "latex-workshop.synctex.synctexjs.enabled": true,

  // üìö Visor PDF integrado en una pesta√±a
  "latex-workshop.view.pdf.viewer": "tab",

  // üßæ Ajustes visuales del editor
  "editor.wordWrap": "on",
  "editor.renderWhitespace": "boundary",
  "editor.minimap.enabled": true,

  // üíæ Guardado autom√°tico despu√©s de un tiempo
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 3000,

  // Parpadeo rojo de cambio en el documento
  "latex-workshop.view.pdf.highlight.changed": true,

  // Archivos ra√≠z espec√≠ficos para el proyecto
  "latex-workshop.latex.search.rootFiles.include": [
      "Plantilla.tex"
  ]
  
}